# Runtime
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# CORS (tight: solo este origen exacto)
CORS_ORIGIN=https://app.latentum.app

# Database (example, NOT real)
DATABASE_URL=postgresql://latentum_app:CHANGE_ME@db:5432/latentum
# DATABASE_URL_TEST=postgresql://latentum_app:CHANGE_ME@localhost:5432/latentum_test

# Security
JWT_SECRET=CHANGE_ME_LONG_RANDOM

# Rate limiting (override per env)
RL_GLOBAL_MAX=300
RL_GLOBAL_WINDOW=1 minute

RL_AUTH_MAX=20
RL_AUTH_WINDOW=1 minute

RL_EVENTS_MAX=60
RL_EVENTS_WINDOW=1 minute

RL_WINDOWS_MAX=30
RL_WINDOWS_WINDOW=1 minute

RL_RECOG_MAX=30
RL_RECOG_WINDOW=1 minute

RL_REVEL_MAX=30
RL_REVEL_WINDOW=1 minute

RL_SAFETY_MAX=10
RL_SAFETY_WINDOW=1 minute

RL_ACCOUNT_MAX=5
RL_ACCOUNT_WINDOW=1 minute
